{
    "compilerOptions": {
        "allowJs": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "jsx": "preserve",
        "strict": true,
        "isolatedModules": true,
        "target": "ES2020",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./resources/js/*"],
            "ziggy-js": ["./vendor/tightenco/ziggy"]
        },
        "typeRoots": ["./node_modules/@types", "./resources/js"],
        "types": ["vite/client"],
    },
    "include": ["resources/js/**/*.ts", "resources/js/**/*.vue", "resources/js/**/*"]
}
